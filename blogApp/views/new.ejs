<% include header%>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blog" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title"></input>
        </div>
        <div class="field">
            <label>Image url</label>
            <input type="text" name="blog[image]" placeholder="url"></input>
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea  name="blog[body]" placeholder="description"></textarea>
        </div>
        
        
        <button class="ui teal big basic button">Submit!</button>
        
    </form>
</div>
<% include footer%>